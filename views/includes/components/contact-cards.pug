#contactForm.container.mt-4
  .col-lg-8
    .card.contact-card
      .card-body
        form
          h3.text-center.font-bold.py-4
            strong Contact Ben
          |
          .form-row.justify-content-center
            .form-group.form-group-icon.col-md-6
              span
                i(class=user_icon aria-hidden="true")
              input.form-input-main(type="text" placeholder="Your Name")
            |
            //- Email
            |
          .form-row.justify-content-center
            .form-group.form-group-icon.col-md-6
              span
                i(class=envelope_icon aria-hidden="true")
              input.form-input-main(type="email" placeholder="Your Email")
          |
          //- Radio Selection
          |
          .form-row.justify-content-center
            .form-group.col-md-6
              label(for="dropdown-menu") I'm Looking To
              select.form-control(id="dropdown-menu")
                option.selected List My Property
                option Buy a Home
                option Rent
                option Chat
