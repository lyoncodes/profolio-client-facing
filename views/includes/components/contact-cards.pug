            //-     .form-check
            //-       input.form-check-input(type="checkbox" name="gridRadios" id="gridRadios1" value="Buy")
            //-       label.form-check-label(for="gridRadios1") Sell
            //-     .form-check
            //-       input.form-check-input(type="checkbox" name="gridRadios" id="gridRadios1" value="Buy")
            //-       label.form-check-label(for="gridRadios1") Rent
            //-     .form-check
            //-       input.form-check-input(type="checkbox" name="gridRadios" id="gridRadios1" value="Buy")
            //-       label.form-check-label(for="gridRadios1") Chat
          .form-row.justify-content-center
            .form-group.col-md-6
              label(for="formControlTextarea")
              textarea.form-control#formControlTextarea(rows="3" placeholder="Message")
        |
        //- Button
        |
        .text-center.py-4
          button.btn Send It
            i(class=paperplane_icon)
